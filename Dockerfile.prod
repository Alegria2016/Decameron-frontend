FROM node:20-alpine AS builder

WORKDIR /app

# 1. Copia archivos de configuraci칩n primero
COPY package*.json .
COPY vite.config.js .

# 2. Instala dependencias
RUN npm install

# 3. Copia todo el proyecto
COPY . .

# 4. Ejecuta el build
RUN npm run build

# Etapa de producci칩n
FROM nginx:alpine

# 1. Copia los archivos construidos
COPY --from=builder /app/dist /usr/share/nginx/html

# 2. Copia configuraci칩n personalizada de Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# 3. Expone el puerto 80 (est치ndar para Nginx)
EXPOSE 80

# 4. Inicia Nginx
CMD ["nginx", "-g", "daemon off;"]